{
    "name": "@thazstack/prettier-config",
    "version": "0.0.0",
    "description": "@ThazStack configuration prettier",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/thazlett16/cheyney-util-app.git",
        "directory": "packages/prettier-config"
    },
    "author": {
        "name": "Tim Hazlett",
        "email": "timhazlett2016@gmail.com"
    },
    "keywords": [
        "ThazStack",
        "config",
        "prettier"
    ],
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./build/index.d.ts",
                "default": "./build/index.js"
            },
            "require": {
                "types": "./build/index.d.cts",
                "default": "./build/index.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "sideEffects": false,
    "files": [
        "build",
        "src"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch"
    },
    "packageManager": "pnpm@9.9.0",
    "engines": {
        "node": ">20.0.0",
        "npm": ">10.0.0"
    },
    "dependencies": {},
    "devDependencies": {
        "esbuild-plugin-file-path-extensions": "^2.1.2",
        "prettier": "^3.3.3",
        "tsup": "^8.2.4",
        "typescript": "^5.6.2"
    },
    "peerDependencies": {
        "prettier": ">=3.3.3 <4"
    },
    "peerDependenciesMeta": {
        "prettier": {
            "optional": false
        }
    }
}

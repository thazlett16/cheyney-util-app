{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build"
    },
    "include": ["src", "tsup.config.ts"],
    "exclude": ["dist", "node_modules"]
}
